/* Click paths. */

namespace Click {

internal static const string hooks_dir = "@pkgdatadir@/hooks";
internal static const string db_dir = "@sysconfdir@/click/databases";
internal static const string frameworks_dir = "@pkgdatadir@/frameworks";

/**
 * get_hooks_dir:
 *
 * Returns: The Click hooks directory.
 */
public string
get_hooks_dir ()
{
	return hooks_dir;
}

/**
 * get_db_dir:
 *
 * Returns: The Click database configuration directory.
 */
public string
get_db_dir ()
{
	return db_dir;
}

/**
 * get_frameworks_dir:
 *
 * Returns: The Click frameworks directory.
 */
public string
get_frameworks_dir ()
{
	return frameworks_dir;
}

}
